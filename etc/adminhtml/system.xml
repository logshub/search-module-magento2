<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="logshub" translate="label" sortOrder="1000">
            <label>LogsHub</label>
        </tab>
        <section id="logshub_search" translate="label" sortOrder="430" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Search</label>
            <tab>logshub</tab>
            <resource>Logshub_SearchModule::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If disabled, no synchronization will be made.</comment>
                </field>
                <field id="service_id" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Service ID</label>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Url</label>
                    <comment>Eg. https://uk01.apisearch.logshub.com</comment>
                </field>
                <field id="api_hash" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Hash</label>
                </field>
                <field id="api_secret" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Secret</label>
                </field>
                <field id="public_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Public Key</label>
                </field>
            </group>
